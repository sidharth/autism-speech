<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_viewgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="ankr.autismhearing.StringFragment"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textview_instruction_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Instruction To Parent"
            android:textSize="@dimen/instruction_title"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/textview_instruction_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/instruction_subtitle"
            android:text="Tap the blinking strings below"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_dark"/>

        <Button
            android:id="@+id/button_continue_first_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="@dimen/continue_first_stage"
            android:layout_marginTop="15dp"
            app:backgroundTint="@color/colorPrimaryDark"
            android:alpha="0.15"
            android:enabled="false"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/instruction_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/instruction_hand"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/container_string_c"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/string"
            android:shadowColor="@android:color/transparent"
            android:contentDescription="0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_string_d"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/string"
            android:shadowColor="@android:color/transparent"
            android:contentDescription="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_string_f"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_f"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/string"
            android:shadowColor="@android:color/transparent"
            android:contentDescription="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_string_g"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/button_g"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/string"
            android:shadowColor="@android:color/transparent"
            android:contentDescription="3"
            />
    </LinearLayout>

